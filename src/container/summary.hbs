{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <div class="card">
        <div class="card-header text-bg-info">{{> title big=true data=summary.title}}</div>
        <div class="card-body">
            <p>{{summary.text}}</p>
        </div>
    </div>

    <div class="card mt-2">
        <div class="card-header text-bg-warning">{{> title big=false data=experience.title}}</div>
        <div class="card-body">
            <p>{{experience.text}}</p>
        </div>
    </div>
    {{/with}}
</div>

