{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
   {{#with main}}
   <main>
      <section>
         {{> title big=true data="Work history"}}

         <div>
            <ul>
               {{#each works}}
               <li>
                  <div>
                     {{position}}
                  </div>

                  <br>

                  <div>
                     {{duration.from}} -
                     {{#if duration.to}}
                     {{duration.to}}
                     {{else}}
                     (працюємо)
                     {{/if}}
                  </div>

                  <br>

                  <div>
                     {{#if company.url}}
                     {{> link text=company.name href=company.url blank=true noLine=true}}
                     {{else}}
                     <b>{{company.name}}</b>
                     {{/if}}
                  </div>

                  <br>
                  <br>

                  <div>
                     <strong>Projects ({{profectAmount}})</strong>
                  </div>

                  <br>

                  <ul>
                     {{#each projects}}
                     <li>
                        <div>
                           {{> link text=name href=url blank=true noLine=true}}
                        </div>

                        <br>

                        <div>
                           <p>{{about}}</p>
                        </div>

                        <br>

                        <em>Project stacks ({{stackAmount}})</em>

                        <ul>
                           {{#each stacks}}
                           <li>{{name}}</li>
                           {{/each}}
                        </ul>

                        <br>

                        <em>Project awards</em>

                        <ul>
                           {{#each awards}}
                           <li>{{name}}</li>
                           {{/each}}
                        </ul>

                     </li>
                     {{/each}}
                  </ul>
               </li>
               <br>
               {{/each}}
            </ul>
         </div>
      </section>
      {{/with}}
</div>

