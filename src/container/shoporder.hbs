<main>
	<section class="row">
		{{#with navigation}}
		<div class="card">
			<ul class="nav col-12">
				{{#each links}}
				<li class="nav-item">
					<a class="nav-link {{#if @last}}disabled{{/if}}" href="{{href}}">{{text}}</a>
				</li>
				{{/each}}
			</ul>
		</div>
		{{/with}}
	</section>

	<hr>

	<section>
		<div class="row">
			<div class="ps-0 mt-4 mb-5">
				<h2>{{header}}</h2>
			</div>
		</div>

		<div class=" row">
			<div class="col-8 mb-3 ps-0 ms-0">
				<div>
					{{#with contacts_data}}
					<h3>{{title}}</h3>
					{{#each buttons}}
					{{#if isPrimary}}
					<button type="button" class="btn btn-warning">{{text}}</button>
					{{/if}}
					{{#if isOutline}}
					<button type="button" class="btn btn-outline-warning">{{text}}</button>
					{{/if}}
					{{/each}}
					{{/with}}
				</div>

				<div> {{! дані користувача}}
					<div class="row ms-0 pt-3">
						<div class="col-6 ps-0">
							{{#with contacts_data}}
							{{#with form}}
							{{#with input}}
							{{#with surname}}
							<label class="form-label">{{label}}</label>
							<input class="form-control" placeholder="{{placeholder}}">
							<div class="form-text">{{caption}}</div>
							{{/with}}
							{{/with}}
							{{/with}}
							{{/with}}
						</div>
						<div class="col-6 ps-0">
							{{#with contacts_data}}
							{{#with form}}
							{{#with input}}
							{{#with name}}
							<label class="form-label">{{label}}</label>
							<input class="form-control" placeholder="{{placeholder}}">
							<div class="form-text">{{caption}}</div>
							{{/with}}
							{{/with}}
							{{/with}}
							{{/with}}
						</div>
					</div>
					<div class="row ms-0 p-0">
						<div class="col-6 ps-0">
							{{#with contacts_data}}
							{{#with form}}
							{{#with input}}
							{{#with phone}}
							<label class="form-label">{{label}}</label>
							<input class="form-control" placeholder="{{placeholder}}">
							<div class="form-text">{{caption}}</div>
							{{/with}}
							{{/with}}
							{{/with}}
							{{/with}}
						</div>
						<div class="col-6 ps-0">
							{{#with contacts_data}}
							{{#with form}}
							{{#with input}}
							{{#with email}}
							<label class="form-label">{{label}}</label>
							<input class="form-control" placeholder="{{placeholder}}">
							<div class="form-text">{{caption}}</div>
							{{/with}}
							{{/with}}
							{{/with}}
							{{/with}}
						</div>
					</div>
				</div>

				<hr>

				<div> {{! перемикачі}}
					{{#with contacts_data}}
					{{#with form}}
					{{#each switch}}
					<div class="form-check form-switch">
						{{#if isActive}}
						<input class="form-check-input" type="checkbox">
						<label class="form-check-label">{{text}}</label>
						{{/if}}
					</div>
					{{/each}}
					{{/with}}
					{{/with}}
				</div>

				<hr>

				<div> {{! доставка}}
					{{#with delivery}}
					<div>
						<h3>{{title}}</h3>
						<div class="card p-2">
							<div class="row">
								{{#each select}}
								<div class="col">
									<label class="form-label">{{label}}</label>
									<select class="form-select">
										<option selected>{{placeholder}}</option>
										{{#each options}}
										<option value="{{value}}">{{text}}</option>
										{{/each}}
									</select>
								</div>
								{{/each}}
							</div>
						</div>
					</div>
					{{/with}}
				</div>

				<div> {{! вибір доставки}}
					<div class="mt-3">
						{{#with delivery}}
						{{#each delivery_type}}
						<div class="form-check">
							<input class="form-check-input" type="radio" name="type">
							<label class="form-check-label">{{type}}</label>
						</div>
						{{/each}}
						{{/with}}
					</div>
				</div>

				<hr>

				<div> {{! оплата доставки}}
					{{#with delivery}}
					{{#with payment}}
					<h3>{{title}}</h3>
					{{#each list}}
					<div class="form-check">
						<input class="form-check-input" type="radio" name="type">
						<label class="form-check-label">{{type}}</label>
						<div class="form-text">{{description}}</div>
					</div>
					{{/each}}
					{{/with}}
					{{/with}}
				</div>

				<hr>

				<div> {{! дані користувача доставки}}
					{{#with delivery}}
					{{#with contact}}
					<h3>{{title}}</h3>
					{{/with}}
					{{/with}}
					<div class="row ms-0 pt-3">
						<div class="col-6 ps-0">
							{{#with delivery}}
							{{#with contact}}
							{{#with surname}}
							<label class="form-label">{{label}}</label>
							<input class="form-control" placeholder="{{placeholder}}">
							<div class="form-text">{{caption}}</div>
							{{/with}}
							{{/with}}
							{{/with}}
						</div>
						<div class="col-6 ps-0">
							{{#with delivery}}
							{{#with contact}}
							{{#with name}}
							<label class="form-label">{{label}}</label>
							<input class="form-control" placeholder="{{placeholder}}">
							<div class="form-text">{{caption}}</div>
							{{/with}}
							{{/with}}
							{{/with}}
						</div>
					</div>
					<div class="row ms-0 p-0">
						<div class="col-6 ps-0">
							{{#with delivery}}
							{{#with contact}}
							{{#with phone}}
							<label class="form-label">{{label}}</label>
							<input class="form-control" placeholder="{{placeholder}}">
							<div class="form-text">{{caption}}</div>
							{{/with}}
							{{/with}}
							{{/with}}
						</div>
						<div class="col-6 ps-0">
							{{#with delivery}}
							{{#with contact}}
							{{#with email}}
							<label class="form-label">{{label}}</label>
							<input class="form-control" placeholder="{{placeholder}}">
							<div class="form-text">{{caption}}</div>
							{{/with}}
							{{/with}}
							{{/with}}
						</div>
					</div>
				</div>

				<hr>

				<div> {{! коментар доставки}}
					{{#with delivery}}
					<div>
						{{#with coment}}
						<label class="form-label">{{label}}</label>
						<input class="form-control" placeholder="{{placeholder}}">
						{{/with}}
					</div>
					{{/with}}
				</div>

				<hr>

				<div> {{! купони}}
					{{#with coupon}}
					<h3>{{title}}</h3>

					<div>
						{{#with select}}
						{{#with availabel_coupon}}
						<label class="form-label">{{label}}</label>
						<select class="form-select form-select-lg">
							<option selected>{{placeholder}}</option>
							{{#each options}}
							<option value="{{value}}">{{text}}</option>
							{{/each}}
						</select>
						{{/with}}
						{{/with}}
					</div>
					<div class="mt-3">
						{{#with select}}
						{{#with friend_coupon}}
						<label class="form-label">{{label}}</label>
						<select class="form-select form-select-sm">
							<option selected>{{placeholder}}</option>
							{{#each options}}
							<option value="{{value}}">{{text}}</option>
							{{/each}}
						</select>
						{{/with}}
						{{/with}}
					</div>
					<div class="mt-3">
						{{#with add}}
						{{#with friend}}
						<label class="form-label">{{label}}</label>
						<input class="form-control form-control-lg" placeholder="{{placeholder}}">
						<div class="form-text">{{caption}}</div>
						{{/with}}
						{{/with}}
					</div>
					<div class="mt-3">
						{{#with add}}
						{{#with colleague}}
						<label class="form-label">{{label}}</label>
						<input class="form-control form-control-sm" placeholder="{{placeholder}}">
						<div class="form-text">{{caption}}</div>
						{{/with}}
						{{/with}}
					</div>
					{{/with}}
				</div>

				<hr>

				<div> {{! вподобайка техніки}}
					{{#with quiz}}
					<h3>{{title}}</h3>
					{{#with preference}}
					<label class="form-label">{{title}}</label>
					{{#each options}}
					<div class="form-check">
						<input class="form-check-input" type="radio" name="options">
						<label class="form-check-label">{{this}}</label>
					</div>
					{{/each}}
					{{/with}}
					<div class="mt-3"> {{! досвід користування}}
						{{#with your_expirience}}
						<label class="form-label">{{label}}</label>
						<input class="form-control" placeholder="">
						{{/with}}
					</div>
					<div class="mt-3">
						{{#with purchase_frequency}}
						<label class="form-label">{{label}}</label>
						<select class="form-select form-select">
							<option selected>{{placeholder}}</option>
							{{#each options}}
							<option value="{{value}}">{{text}}</option>
							{{/each}}
						</select>
						{{/with}}
					</div>
					<div class="mt-3">
						{{#with factors}}
						<label class="form-label">{{title}}</label>
						{{#each options}}
						<div class="form-check">
							<input class="form-check-input" type="checkbox" name="options">
							<label class="form-check-label">{{this}}</label>
						</div>
						{{/each}}
						{{/with}}
					</div>
					{{/with}}
				</div>
			</div>

			<div class="col-4 p-0 m-0"> {{! бокові кнопки}}
				<div class="row">
					<div class="card ms-2 p-2 mb-2">
						{{#each action_block}}
						<div>
							{{#if isSuccess}}
							<button type="button" class="btn btn-success mb-1">{{text}}</button>
							{{/if}}
							{{#if isDanger}}
							<button type="button" class="btn btn-danger">{{text}}</button>
							{{/if}}
							{{#if isInfo}}
							<button type="button" class="btn btn-info mt-1">{{text}}</button>
							{{/if}}
						</div>
						{{/each}}
					</div>
				</div>
				<div class="row">
					<div class="card ms-2 p-2">
						<div>
							{{#with total}}
							<h3>{{title}}</h3>
							{{#each item_list}}
							<div>{{name}}: {{price}}</div>
							{{/each}}
							<hr>
							{{#each additional_info}}
							<div>{{text}}: {{value}}</div>
							{{/each}}
							<hr>
							{{#with total_price}}
							<div>{{text}}: {{value}}</div>
							{{/with}}
							<hr>
						</div>
						{{#each button}}
						<div>
							{{#if isPrimary}}
							<button type="button" class="btn btn-primary mb-2">{{text}}</button>
							{{/if}}
							{{#if isOutline}}
							<button type="button" class="btn btn-outline-primary">{{text}}</button>
							{{/if}}
						</div>
						{{/each}}

						{{/with}}
					</div>
				</div>
			</div>

			<hr>

			<div class="row m-0 p-0"> {{! навігація}}
				{{#each footer}}
				<div class="col-2 m-0 p-0">
					<div class="row">
						{{#each this}}
						<ul class="nav flex-column">
							<li class="nav-item">
								<a class="nav-link active" href="{{link}}">{{text}}</a>
							</li>
						</ul>
						{{/each}}
					</div>
				</div>
				{{/each}}
			</div>

		</div>
	</section>
</main>