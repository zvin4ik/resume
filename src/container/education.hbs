<div>
	{{#with main}}
	<main>

		<div class="row">
			<div class="col-6">
				<div class="card">
					<img src="https://picsum.photos/400/200" class="card-img-top" alt="img">
					<div class="card-body">
						<div class="card-title">{{> title big=true data="My educations"}}</div>
						<ul>
							{{#each educations}}
							<li>
								{{name}}
								{{#unless isEnd}} (в процесі) {{/unless}}
							</li>
							{{/each}}
						</ul>
					</div>
				</div>
			</div>
			<div class="col-6">
				<div class="card">
					<img src="https://picsum.photos/400/200" class="card-img-top" alt="img">
					<div class="card-body">
						<div class="card-title">{{> title big=false data="My certificates"}}</div>
						<ul>
							{{#each certificates}}
							<li>
								{{name}}
								{{#if id}}
								({{id}})
								{{/if}}
							</li>
							{{/each}}
						</ul>
					</div>
				</div>
			</div>
		</div>
	</main>
	{{/with}}
</div>